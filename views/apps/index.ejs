<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/head.ejs'); -%>
  </head>
  <body>
    <div class="header">
      <div class="LHSheader">
        <div class="logo">
          <img src="/public/img/IMSlogo.png" alt="IMSlogo" width="80vmax">
        </div>
        <div class="companyName">
          <a href="/apps" style="text-decoration:none;"><h1>iDiDit</h1></a>
        </div>
      </div>

      <div class="RHSheader">
        <div>
          <a href="/apps"><img class="icon" src="/public/img/homeIcon.png" alt="HomeIcon" width="35"></a>
        </div>
        <div>
          <a href="/sessions/<%= user._id %>"><img class="icon" src="/public/img/userIcon.png" alt="UserIcon" width="25"></a>
        </div>
        <div>
          <form action="/sessions?_method=DELETE" method="POST">
            <button type="submit" class="logout"><img class="icon" src="/public/img/logout.png" alt="logout" width="30"></button>
          </form>
        </div>
      </div>
    </div>  


    <div class="subsplash">
      <!--  ADD DELETE FORM HERE-->
<!-- 
      <form action="/apps/list?_method=DELETE" method="POST">
        <button class="button" type="submit"><h4>DELETE ALL</h4></button>
      </form> -->
      
      <div class="toolContainer">
        <% for(let i = 0; i < tools.length; i++){ %>
          <div class="toolCard">
            <div class="toolName">
              <h3><%=tools[i].name; %></h3>
            </div>
            <div class="toolImg">
              <a href="/apps/<%=tools[i].id; %>" style="text-decoration:none;"><img src="<%=tools[i].img; %>" alt="<%=tools[i].name; %>" class="defaultimg"></a>
            </div>
            <div class="toolName">
              <h4>QTY: <%=tools[i].qty; %></h4>
            </div>
          </div>
        <% } %>
        
      </div>
    </div>
  </body>
</html>