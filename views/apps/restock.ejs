<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('/mnt/c/Users/radic/projects/inventory-system/views/partials/head.ejs'); -%>
    
  </head>
  <body>
    <div class="header">
      <div class="LHSheader">
          <div class="logo">
              <img src="/public/img/IMSlogo.png" alt="IMSlogo" width="80vmax">
          </div>
          <div class="companyName">
            <a href="/apps" style="text-decoration:none;"><h1>iDiDit</h1></a>
          </div>
          
      </div>
      <div class="RHSheader">
          <div>
            <a href="/apps"><img class="icon" src="/public/img/homeIcon.png" alt="HomeIcon" width="35"></a>
          </div>
          <div>
            <a href="/sessions/<%= user._id %>"><img class="icon" src="/public/img/userIcon.png" alt="UserIcon" width="25"></a>
          </div>
          <div>
            <form action="/sessions?_method=DELETE" method="POST">
                <button type="submit" class="logout"><img class="icon" src="/public/img/logout.png" alt="logout" width="30"></button>
            </form>
          </div>
      </div>
    </div>  

    <div class="subsplash">
      
      <div class="toolForms">
        <div class="toolDetailsCard">
          <div class="toolName">
            <h2>Name: <%=tools.name; %></h2> 
          </div>
          <div class="toolDetailsImg">
            <img src="<%=tools.img; %>" alt="<%=tools.name; %>" class="showimg"/>
          </div>
          <div class="toolsdetails">
            <div>
              <h4>Type: <%=tools.type; %></h4>
            </div>
            <div>
              <h4>QTY: <%=tools.qty; %></h4>
              <h4>Price: $ <%=tools.price; %></h4>
            </div>
          </div>
        </div>

        <div class="userbuttons">
          <div class="row">
            <a href="/apps/orderForm" class="button"  style="text-decoration:none;"><h4>BACK TO ORDER FORM</h4></a>
          </div>
          
          <div class="row">
            <form action="/apps/orderForm/<%=tools.id; %>" method="POST">
              <button class="button" type="submit"><h3>RE-STOCK</h3></button>
            </form>
          </div>

        </div> 

      </div>

    </div>

  </body>
</html>