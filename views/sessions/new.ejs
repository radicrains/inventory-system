<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head.ejs'); -%>
  </head>
  <body>
    <div class="container">
      <h1>Log In</h1>
      <div class="row">
        <form class="col s12" action="/sessions" method="POST">
          <div class="row">
            <div class="input-field col s6">
              <input placeholder="Username" id="username" type="text" class="validate" name="username" required>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <input placeholder="Password" id="password" type="password" class="validate" name="password" required>
            </div>
          </div>

          <button class="btn waves-effect waves-light" type="submit">Submit</button>
        </form>
      </div>
  </body>
</html>