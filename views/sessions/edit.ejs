<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head.ejs'); -%>
  </head>
  <body>
    <div class="header">
      <div class="LHSheader">
        <div class="logo">
          <img src="/public/img/IMSlogo.png" alt="IMSlogo" width="80vmax">
        </div>
        <div class="companyName">
          <a href="/apps" style="text-decoration:none;"><h1>iDiDit</h1></a>
        </div>
      </div>

      <div class="RHSheader">
        <div>
          <a href="/apps"><img class="icon" src="/public/img/homeIcon.png" alt="HomeIcon" width="35"></a>
        </div>
        <div>
          <a href="/sessions/<%= user._id %>"><img class="icon" src="/public/img/userIcon.png" alt="UserIcon" width="25"></a>
        </div>
        <div>
          <form action="/sessions?_method=DELETE" method="POST">
            <button type="submit" class="logout"><img class="icon" src="/public/img/logout.png" alt="logout" width="30"></button>
          </form>
        </div>
      </div>
    </div>

    <div class="subsplash">
      <form class="toolForms" action="/sessions/<%=user._id; %>?_method=PUT" method="POST">
        <div class="row1">
          <div class="toolInputText">
            <label for="username">New Username</label>
            <input value="<%= user.username %>" id="username" type="text" class="accountInput" name="username">
          </div>
          
        </div>

        <!-- <div class="row2">
          <div class="toolInputText">
            <label for="password">New Password</label>
            <input placeholder="Password" id="password" type="password" class="accountInput" name="password">
          </div>
        </div> -->

        <button class="submit" type="submit">Update Info</button>
          
      </form>
    </div>
  </body>
</html>